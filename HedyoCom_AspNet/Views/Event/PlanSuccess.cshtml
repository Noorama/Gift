@model HedyoCom_AspNet.Models.Event

@{
    ViewBag.Title = "Davetiyeleriniz Gönderildi!";
    Layout = "~/Views/Shared/_JangoLayout.cshtml";
}
<div class="c-layout-page" style="width: 60%; margin:auto;display: flex;align-items: center; justify-content: center;margin-top: 120px;margin-bottom: 120px;">
    <div style="max-width: 60%; margin:auto;display: block;">
        <h2>Davetiyeleriniz Gönderildi</h2>
        <h5>Etkinliğinizi yönetmek için @Html.ActionLink("Tıklayınız", "Manage", new { id = Request.QueryString["weddingId"] }, null)</h5>
        
    </div>
    <div class="col-md-6 col-sm-8" style="margin:auto;display: block;">
        <div class="col-md-6 col-sm-6 c-margin-t-10">
            <a class="btn btn-block btn-social c-btn-square c-btn-uppercase btn-md btn-twitter" href="@ViewBag.TwitterShareUrl">
                <i class="fa fa-twitter" style="border: 0"></i> Twitter'da Paylaş
            </a>
        </div>
        <div class="col-md-6 col-sm-6 c-margin-t-10">
            <a class="btn btn-block btn-social c-btn-square c-btn-uppercase btn-md btn-facebook" href="@ViewBag.FacebookShareUrl">
                <i class="fa fa-facebook" style="border: 0"></i> Facebook'ta Paylaş
            </a>
        </div></div>

</div>